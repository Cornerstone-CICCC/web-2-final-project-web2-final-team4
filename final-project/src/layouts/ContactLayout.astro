---
import Image from "astro/components/Image.astro";

const { title, subTitle, text, imgUrl, hideImg = false, alt } = Astro.props;
---

<section class="container py-5">
  <div class="row align-items-center">
    <div class="col-12 col-lg-6">
      <div class="d-flex flex-column gap-3 mb-5">
        <h3 class="fw-bold">{subTitle}</h3>
        <h2 class="fs-1 fw-bold">{title}</h2>
        <p>{text}</p>
      </div>
      <slot />
    </div>
    <div class=`col-6 d-none ${hideImg && "d-lg-block"}`>
      <Image class=`w-100 h-100 object-fit-cover` src={imgUrl} alt={alt} />
    </div>
  </div>
</section>
