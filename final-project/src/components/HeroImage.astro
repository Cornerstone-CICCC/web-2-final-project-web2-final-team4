---
import { Image } from "astro:assets";
import heroimg from "../assets/pics/heroImg.jpeg"
---

<div id="responsive-container">
  <div class="row align-items-center">
    <div class="col-lg-6 left-items py-4 p-lg-5">
      <h1 class="fs-1 fw-bold">A Clean Home,<br>A Happy Life,<br>Let Us Handle the Dirty Work!</h1>
      <p class="pt-4 pb-4">We develop innovative design solutions that enable our clients to enhance their competitive advantage.</p>  
      <div class="btn-container d-flex gap-2">
        <button class="btn btn-dark">Request A Quote</button>
        <button class="btn btn-outline-dark">Learn More</button>
      </div>
    </div>
    <div class="col-lg-6 px-lg-0">
      <Image src={heroimg} alt="hero img" class="img-fluid hero-img" />
    </div>
  </div>
</div>

<script>
  function updateContainerClass() {
    const container = document.getElementById("responsive-container");
    if (window.innerWidth >= 992) {
      container?.classList.add("container-fluid");
      container?.classList.remove("container");
    } else {
      container?.classList.add("container");
      container?.classList.remove("container-fluid");
    }
  }
  updateContainerClass();

  window.addEventListener("resize", updateContainerClass);
</script>

<style>
.hero-img {
  max-height: 100vh; 
  object-fit: cover;
}

@media (max-width: 992px) {
  .hero-img {
    max-width: 100%;
    height: auto;
  }
}
</style>