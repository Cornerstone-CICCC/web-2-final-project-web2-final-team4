---
import { Image } from "astro:assets";
import man1 from "../assets/pics/man1.png";
import woman1 from "../assets/pics/woman1.png";
import woman2 from "../assets/pics/woman2.png";
import cathatman from "../assets/pics/cathatman.png";
import LinkedIn from "../assets/icon/LinkedIn.svg";
import Twitter from "../assets/icon/Twitter.svg";
import Vector from "../assets/icon/Vector.svg";
import "bootstrap/dist/css/bootstrap.min.css";
---

<div class="page-title">
  <h2>Our Team</h2>
  <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
</div>
<div class="container">
  <div class="row">
    <div
      class="d-flex flex-wrap justify-content-center my-3 col-lg-6 flex-lg-nowrap align-items-center my-lg-5"
    >
      <Image class="img-fluid" src={man1} alt="Leslie Alexander" />
      <div class="mx-3 d-block text-center text-lg-start texts">
        <h3>Leslie Alexander</h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
          varius enim in eros elementum tristique.
        </p>
        <div class="social-links">
          <LinkedIn width={24} height={24} />
          <Twitter width={24} height={24} />
          <Vector width={24} height={24} />
        </div>
      </div>
    </div>
    <div
      class="d-flex flex-wrap justify-content-center my-3 col-lg-6 flex-lg-nowrap align-items-center my-lg-5"
    >
      <Image src={woman1} alt="Ralph Edwards" />
      <div class="mx-3 d-block text-center text-lg-start texts">
        <h3>Ralph Edwards</h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
          varius enim in eros elementum tristique.
        </p>
        <div class="social-links">
          <LinkedIn width={24} height={24} />
          <Twitter width={24} height={24} />
          <Vector width={24} height={24} />
        </div>
      </div>
    </div>
    <div
      class="d-flex flex-wrap justify-content-center my-3 col-lg-6 flex-lg-nowrap align-items-center my-lg-5"
    >
      <Image src={woman2} alt="Annette Black" />
      <div class="texts d-block text-center text-lg-start mx-3">
        <h3>Annette Black</h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
          varius enim in eros elementum tristique.
        </p>
        <div class="social-links">
          <LinkedIn width={24} height={24} />
          <Twitter width={24} height={24} />
          <Vector width={24} height={24} />
        </div>
      </div>
    </div>
    <div
      id="hidden-card"
      class="d-flex flex-wrap justify-content-center d-none my-3 col-lg-6 flex-lg-nowrap align-items-center my-lg-5 d-lg-flex"
    >
      <Image src={cathatman} alt="Savannah Nguyen" />
      <div class="texts d-block text-center text-lg-start mx-3">
        <h3>Savannah Nguyen</h3>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
          varius enim in eros elementum tristique.
        </p>
        <div class="social-links">
          <LinkedIn width={24} height={24} />
          <Twitter width={24} height={24} />
          <Vector width={24} height={24} />
        </div>
      </div>
    </div>
  </div>
</div>
<div id="view-all-container" class="d-lg-none text-center my-4">
  <button id="view-all-btn" class="btn btn-light">View All</button>
</div>

<style>
  .page-title {
    text-align: center;
    margin-bottom: 40px;
  }
  .page-title h2 {
    font-size: 48px;
    padding-top: 112px;
    margin-bottom: 10px;
  }
  .texts h3 {
    font-size: 20px;
    margin: 0;
    padding-bottom: 24px;
  }
  .texts p {
    font-size: 16px;
    margin: 0;
    padding-bottom: 24px;
  }
  .view-all-btn {
    margin-top: 20px;
    border: 1px solid #000000;
    width: 100%;
  }
  .d-flex h3 {
    margin: 0;
    padding-top: 16px;
  }
  #view-all-container {
    padding-bottom: 112px;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const viewAllButton = document.getElementById("view-all-btn");
    const hiddenCard = document.getElementById("hidden-card");

    viewAllButton.addEventListener("click", () => {
      hiddenCard.classList.remove("d-none");
      viewAllButton.style.display = "none";
    });
  });
</script>
