      </div>
    </div>
  </div>
  <div id="view-all-container" class="d-lg-none text-center">
    <button id="view-all-btn" class="btn">View All</button>
  </div>
</div>

<style>
  .container {
    padding-top: 48px;
    padding-bottom: 48px;
    padding-left: 24px;
    padding-right: 24px;
  }
  /* .row > * {
    padding: 0;
  } */
  .page-title {
    text-align: center;
    margin-bottom: 32px;
  }

  .fsm {
    font-size: 32px;
    margin-bottom: 10px;
    font-weight: 700;
    line-height: 57.6px;
  }
  .mt-3 {
    margin-bottom: 48px;
  }
  /* .flex-wrap Image {
    width: 380px;
    height: 288px;
    object-fit: cover;
  } */
  .texts h3 {
    font-size: 20px;
    margin: 0;
    padding-bottom: 16px;
    font-weight: 600;
  }
  .texts p {
    font-size: 16px;
    margin: 0;
    padding-bottom: 24px;
    font-weight: 400;
  }
  #view-all-btn {
    padding: 12px 24px;
    background-color: var(----light-color);
    border: 1px solid var(--primary-color);
    width: 100%;
  }
  .d-block h3 {
    margin: 0;
    padding-top: 32px;
  }
  .d-flex img {
    width: 100%;
    height: 288px;
    object-fit: cover;
  }
  @media (min-width: 992px) {
    .fsm {
      font-size: 48px;
    }
    .container {
      padding: 112px 0;
    }
    .d-block h3 {
      padding-top: 0;
    }
  }
</style>
<script>
  const viewAllButton = document.getElementById("view-all-btn");
  const hiddenCard = document.getElementById("hidden-card");

  if (viewAllButton && hiddenCard) {
    viewAllButton.addEventListener("click", () => {
      hiddenCard.classList.remove("d-none");
      viewAllButton.style.display = "none";
    });
  }
</script>
